<?xml version='1.0' encoding='utf-8'?>
<plugin id="com.ma.payeezyapplepay" version="1.0.0" xmlns="http://apache.org/cordova/ns/plugins/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
    <name>payeezy-applepay</name>
    <js-module name="payeezy-applepay" src="www/payeezy-applepay.js">
        <clobbers target="cordova.plugins.ApplePay" />
    </js-module>
    <platform name="ios">
        <framework src="PassKit.framework" />
        <framework src="src/ios/PayeezyClient.framework" />
        <source-file src="src/ios/CDVApplePay.swift" />
        <config-file target="config.xml" parent="/*">
            <feature name="ApplePay">
                <param name="ios-package" value="CDVApplePay" />
            </feature>
        </config-file>
        <dependency id="cordova-plugin-add-swift-support" url="https://github.com/akofman/cordova-plugin-add-swift-support"/>
    </platform>
</plugin>
